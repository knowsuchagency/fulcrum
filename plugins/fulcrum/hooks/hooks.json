{
  "hooks": {
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "fulcrum current-task review 2>/dev/null || true"
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "fulcrum current-task in-progress 2>/dev/null || true"
          }
        ]
      }
    ]
  }
}
