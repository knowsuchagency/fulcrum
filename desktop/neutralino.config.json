{
  "$schema": "https://raw.githubusercontent.com/neutralinojs/neutralinojs/main/schemas/neutralino.config.schema.json",
  "applicationId": "io.fulcrum.desktop",
  "version": "1.10.0",
  "defaultMode": "window",
  "port": 0,
  "documentRoot": "/resources/",
  "url": "/",
  "enableServer": true,
  "enableNativeAPI": true,
  "tokenSecurity": "one-time",
  "logging": {
    "enabled": true,
    "writeToLogFile": true
  },
  "nativeAllowList": [
    "app.*",
    "os.*",
    "debug.*",
    "filesystem.*",
    "events.*",
    "extensions.*",
    "window.*",
    "clipboard.*",
    "updater.*"
  ],
  "globalVariables": {
    "APP_NAME": "Fulcrum",
    "APP_VERSION": "1.10.0"
  },
  "modes": {
    "window": {
      "title": "Fulcrum",
      "width": 1400,
      "height": 900,
      "minWidth": 900,
      "minHeight": 600,
      "fullScreen": false,
      "alwaysOnTop": false,
      "icon": "/resources/icons/icon.png",
      "enableInspector": true,
      "borderless": false,
      "maximize": false,
      "hidden": false,
      "resizable": true,
      "exitProcessOnClose": true,
      "extendUserAgentWith": "Fulcrum Desktop"
    }
  },
  "cli": {
    "binaryName": "fulcrum-desktop",
    "resourcesPath": "/resources/",
    "clientLibrary": "/resources/js/neutralino.js",
    "binaryVersion": "6.4.0",
    "clientVersion": "6.4.0"
  },
  "enableExtensions": false
}
